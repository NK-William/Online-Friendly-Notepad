<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:background="#341B45"
    tools:context=".NotesActivity">

    <EditText
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        android:padding="8dp"
        android:textSize="24sp"
        android:background="#240936"
        android:textColor="#BACDCD"
        android:textColorHint="#838484"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="50"
        android:ems="10"/>

    <EditText
        android:id="@+id/notes_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="#240936"
        android:ems="10"
        android:layout_marginBottom="1dp"
        android:gravity="top"
        android:hint="Enter Notes"
        android:inputType="textMultiLine"
        android:maxLength="60000"
        android:padding="8dp"
        android:textColor="#BACDCD"
        android:textColorHint="#838484"
        app:layout_constraintBottom_toTopOf="@+id/notes_adView"
        app:layout_constraintEnd_toEndOf="@+id/title_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_view"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/notes_adView"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_on_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>